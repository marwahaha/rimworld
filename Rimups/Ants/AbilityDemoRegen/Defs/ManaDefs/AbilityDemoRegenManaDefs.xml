<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ManaDef>
    <defName>MuffaloRegenSample</defName>
    <label>Muffalo mana replenish</label>

    <!-- Races witch mana replenish applies (Same value of the PawnKindDef.race) -->
    <races>
      <li>Demo_Regen_Muffalo</li>
    </races>

    <!-- This determines the initial mana of the pawn -->
    <initial>80</initial>

    <!-- This determines how the pawn regain mana. 'AbilityPack.ManaReplenish_Regenerate' gives a fixed ammount every tick -->
    <replenish Class="AbilityPack.ManaReplenish_Regenerate">
      <!-- The Pawn gains this everty tick, while not dead and not downed -->
      <ammount>0.0078125</ammount>

      <!-- The Pawn gains this everty tick, while only while downed -->
      <ammountDowned>0.0078125</ammountDowned>

      <!-- The Pawn gains this everty tick, while only while dead -->
      <!-- This tag is opcional, and is here for documentation pousposes only -->
      <ammountDead>0.0</ammountDead>
    </replenish>

  </ManaDef>
</Defs>