<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <AbilityDef>
    <defName>AlienEggEvolveAbility</defName>
    <label>Hatching</label>
    <races>
      <li>Ant_Egg</li>
    </races>
    <validity Class="AbilityPack.AbilityRequeriment_CasterConscious" />
    <requeriment Class="AbilityPack.AbilityRequeriment_All">
      <items>
        <li Class="AbilityPack.AbilityRequeriment_TimeFixed">
          <value>200</value>
        </li>
        <li Class="AbilityPack.AbilityRequeriment_RandomChance">
          <accepts>1</accepts>
          <total>200</total>
        </li>
      </items>
    </requeriment>
    <priority Class="AbilityPack.AbilityPriority_Fixed">
      <value>10</value>
    </priority>
    <target Class="AbilityPack.AbilityTarget_Self" />
    <effect Class="AbilityPack.AbilityEffect_Evolve">
      <canBeInterrupted>true</canBeInterrupted>
      <castTime>400</castTime>
      <items>
        <li>
          <from>
            <li>Ant_Egg</li>
          </from>
          <to>
            <li>AntWorker</li>
          </to>
        </li>
      </items>
      <casterMote Class="AbilityPack.AbilityMote_Default" />
    </effect>
  </AbilityDef>

  <AbilityDef>
    <defName>AlienWorkerEvolveAbility</defName>
    <label>Maturing</label>
    <races>
      <li>Ant_Worker</li>
    </races>
    <validity Class="AbilityPack.AbilityRequeriment_All">
      <items>
          <li Class="AbilityPack.AbilityRequeriment_CasterConscious" />
          <li Class="AbilityPack.AbilityRequeriment_ColonyBiggerThan">
            <value>100</value>
          </li>
      </items>
    </validity>
    <requeriment Class="AbilityPack.AbilityRequeriment_All">
      <items>
        <li Class="AbilityPack.AbilityRequeriment_TimeFixed">
          <value>1000</value>
        </li>
        <li Class="AbilityPack.AbilityRequeriment_RandomChance">
          <accepts>1</accepts>
          <total>2000</total>
        </li>
      </items>
    </requeriment>
    <priority Class="AbilityPack.AbilityPriority_Fixed">
      <value>10</value>
    </priority>
    <target Class="AbilityPack.AbilityTarget_Self" />
    <effect Class="AbilityPack.AbilityEffect_Random">            
      <items>
        <li Class="AbilityPack.AbilityEffect_Evolve">
          <canBeInterrupted>true</canBeInterrupted>
          <castTime>100</castTime>
          <items>
            <li>              
              <from>
                <li>Ant_Worker</li>
              </from>
              <to>
                <li>AntWarrior</li>
              </to>
            </li>
          </items>
          <casterMote Class="AbilityPack.AbilityMote_Default" />
        </li>
        <li Class="AbilityPack.AbilityEffect_Evolve">
          <canBeInterrupted>true</canBeInterrupted>
          <castTime>100</castTime>
          <items>
            <li>
              <from>
                <li>Ant_Worker</li>
              </from>
              <to>
                <li>AntStinger</li>
              </to>
          </li>
          </items>
          <casterMote Class="AbilityPack.AbilityMote_Default" />
        </li>
        <li Class="AbilityPack.AbilityEffect_Evolve">
          <canBeInterrupted>true</canBeInterrupted>
          <castTime>100</castTime>
          <items>
            <li>
              <from>
                <li>Ant_Worker</li>
              </from>
              <to>
                <li>AntNurse</li>
              </to>
            </li>
          </items>
          <casterMote Class="AbilityPack.AbilityMote_Default" />
        </li>
      </items>
    </effect>
  </AbilityDef>

  <AbilityDef>
    <defName>AlienQueenSpawnAbility</defName>
    <label>Hatching Eggs</label>
    <races>
      <li>Ant_Queen</li>
    </races>
    <validity Class="AbilityPack.AbilityRequeriment_CasterConscious" />
    <!-- One of this conditions must be true to execute -->
    <requeriment Class="AbilityPack.AbilityRequeriment_Any">
      <items>
        <!-- This contitions makes the spawn goes fastest, only if the Brain allready loses 50% its power -->
        <li Class="AbilityPack.AbilityRequeriment_All">
          <items>
            <li Class="AbilityPack.AbilityRequeriment_SquadSmallerThanColony">
              <squadPowerMultiplier>2.0</squadPowerMultiplier>
            </li>
            <li Class="AbilityPack.AbilityRequeriment_RandomChance">
              <accepts>1</accepts>
              <total>200</total>
            </li>
          </items>
        </li>
        <!-- This contitions makes the spawn goes faster, if the Brain allready loses 10% its power -->
        <li Class="AbilityPack.AbilityRequeriment_All">
          <items>
            <li Class="AbilityPack.AbilityRequeriment_SquadSmallerThanColony">
              <squadPowerMultiplier>1.2</squadPowerMultiplier>
            </li>
            <li Class="AbilityPack.AbilityRequeriment_TimeFixed">
              <value>300</value>
            </li>
            <li Class="AbilityPack.AbilityRequeriment_RandomChance">
              <accepts>1</accepts>
              <total>200</total>
            </li>
          </items>
        </li>
        <!-- This contitions makes the spawn goes at normal rates, when the Brain is at normal size -->
        <li Class="AbilityPack.AbilityRequeriment_All">
          <items>
            <li Class="AbilityPack.AbilityRequeriment_SquadSmallerThanColony">
              <squadPowerMultiplier>1.0</squadPowerMultiplier>
            </li>
            <li Class="AbilityPack.AbilityRequeriment_TimeFixed">
              <value>600</value>
            </li>
            <li Class="AbilityPack.AbilityRequeriment_RandomChance">
              <accepts>1</accepts>
              <total>200</total>
            </li>
          </items>
        </li>
        <!-- This contitions makes the spawn goes at lower rates, when the Brain is greater than the normal rates -->
        <li Class="AbilityPack.AbilityRequeriment_All">
          <items>
            <li Class="AbilityPack.AbilityRequeriment_SquadSmallerThanColony">
              <squadPowerMultiplier>0.8</squadPowerMultiplier>
            </li>
            <li Class="AbilityPack.AbilityRequeriment_TimeFixed">
              <value>1000</value>
            </li>
            <li Class="AbilityPack.AbilityRequeriment_RandomChance">
              <accepts>1</accepts>
              <total>200</total>
            </li>
          </items>
        </li>
        <!-- This contitions makes the spawn goes at lowest, when the Brain allready too big -->
        <li Class="AbilityPack.AbilityRequeriment_All">
          <items>
            <li Class="AbilityPack.AbilityRequeriment_SquadSmallerThanColony">
              <squadPowerMultiplier>0.6</squadPowerMultiplier>
            </li>
            <li Class="AbilityPack.AbilityRequeriment_TimeFixed">
              <value>3000</value>
            </li>
            <li Class="AbilityPack.AbilityRequeriment_RandomChance">
              <accepts>1</accepts>
              <total>200</total>
            </li>
          </items>
        </li>
      </items>
    </requeriment>
    <priority Class="AbilityPack.AbilityPriority_Fixed">
      <value>10</value>
    </priority>
    <target Class="AbilityPack.AbilityTarget_Self" />
    <effect Class="AbilityPack.AbilityEffect_Spawn">
      <castTime>250</castTime>
      <canBeInterrupted>true</canBeInterrupted>
      <range>2</range>
      <pawnKinds>
        <li>AntEgg</li>
      </pawnKinds>
      <casterMote Class="AbilityPack.AbilityMote_Default" />
      <spawnedMote Class="AbilityPack.AbilityMote_Default" />
    </effect>
  </AbilityDef>

  <AbilityDef>
    <defName>AlienNurseHealingAbility</defName>
    <label>Healing Friends</label>
    <races>
      <li>Ant_Nurse</li>
    </races>
    <validity Class="AbilityPack.AbilityRequeriment_CasterConscious" />
    <requeriment Class="AbilityPack.AbilityRequeriment_TimeFixed">
      <value>300</value>
    </requeriment>
    <priority Class="AbilityPack.AbilityPriority_Fixed">
      <value>10</value>
    </priority>
    <target Class="AbilityPack.AbilityTarget_Range">
      <maximumRange>25</maximumRange>
      <closestFirst>true</closestFirst>
      <target Class="AbilityPack.AbilityTarget_Friendly" />
    </target>
    <effect Class="AbilityPack.AbilityEffect_Heal">
      <manaCost>30</manaCost>
      <canBeInterrupted>true</canBeInterrupted>
      <castTime>250</castTime>
      <treatLocalInjuryPowerUse>8</treatLocalInjuryPowerUse>
      <healLocalInjuryPowerUse>2</healLocalInjuryPowerUse>
      <totalPower>60</totalPower>
      <targetPower>0</targetPower>
      <healthTrashHold>0.75</healthTrashHold>
      <casterMote Class="AbilityPack.AbilityMote_Default" />
      <targetMote Class="AbilityPack.AbilityMote_Default" />
    </effect>
  </AbilityDef>
  
</Defs>